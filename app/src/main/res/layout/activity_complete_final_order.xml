<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hm5"
    tools:context=".UserActivity.CompleteFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:text="Enter your shipping Details"
        android:textSize="15dp"
        android:background="@drawable/border_txt2"
       android:gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirem_final_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipment_city"
        app:layout_constraintVertical_bias="0.608" />

    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/border_txt"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <EditText
        android:id="@+id/shipment_city"
        android:layout_width="222dp"
        android:layout_height="30dp"
        android:background="@drawable/border_txt"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipment_address"
        app:layout_constraintVertical_bias="0.088" />

    <EditText
        android:id="@+id/shipment_phone_number"
        android:layout_width="221dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_txt"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipment_name" />

    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="220dp"
        android:layout_height="96dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/border_txt"
        android:ems="10"
        android:gravity="start"
        android:hint="Address"
        android:inputType="textMultiLine"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipment_phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>