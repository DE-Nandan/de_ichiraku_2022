<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity.ProductDetailsActivity"
    android:background="@drawable/hm5"
    >

    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="338dp"
        android:layout_height="173dp"


        android:background="@drawable/border_image"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="centerCrop"


        app:layout_constraintBottom_toTopOf="@+id/product_name_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"

        />

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:layout_marginBottom="404dp"
        android:text="Product Name"
        android:textColor="@color/IndianRed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/product_desc_details"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:layout_marginBottom="112dp"
        android:text="Product Details"
        android:textSize="18sp"
        android:textColor="@color/IndianRed"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name_details"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:layout_marginBottom="32dp"
        android:text="Product Price"
        android:textSize="20sp"
        android:textColor="@color/IndianRed"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_desc_details"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/product_rating"
        android:layout_width="188dp"
        android:layout_height="53dp"
        android:layout_marginBottom="32dp"
        android:text="Product Rating"
        android:textColor="@color/IndianRed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_desc_details"
        app:layout_constraintVertical_bias="0.198" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="112dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        app:backGroundColor="@color/Crimson"
        app:finalNumber="10"
        app:initialNumber="1"
        app:layout_constraintBottom_toTopOf="@+id/normalAddBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_price_details"
        app:layout_constraintVertical_bias="0.753">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/normalAddBtn"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_marginTop="144dp"
        android:text="Add to Cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_price_details" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
